<?xml version="1.0" encoding="UTF-8"?>
<keymap id="captcha-docs-keymap">
    <layouts>
        <layout name="Windows" platform="PC"/>
        <layout name="macOS" platform="MAC"/>
        <layout name="Linux" platform="PC"/>
    </layouts>

    <actions>
        <action id="$OpenSearch">
            <description>Open search</description>
            <shortcut layout="Windows">Ctrl+K</shortcut>
            <shortcut layout="macOS">Cmd+K</shortcut>
            <shortcut layout="Linux">Ctrl+K</shortcut>
        </action>

        <action id="$OpenFilters">
            <description>Open request filters</description>
            <shortcut layout="Windows">Ctrl+Shift+F</shortcut>
            <shortcut layout="macOS">Cmd+Shift+F</shortcut>
            <shortcut layout="Linux">Ctrl+Shift+F</shortcut>
        </action>

        <action id="$CopyCaseId">
            <description>Copy case ID</description>
            <shortcut layout="Windows">Ctrl+Shift+C</shortcut>
            <shortcut layout="macOS">Cmd+Shift+C</shortcut>
            <shortcut layout="Linux">Ctrl+Shift+C</shortcut>
        </action>
    </actions>
</keymap>
